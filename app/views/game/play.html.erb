
<div class="notification center">
	<h3><font class="notification-font-player-one">PLAYER 1</font> turn</h3>
</div>

<div id="container-game-board">
	<table id="game-board" class="table">
		<tbody>
			<% 6.times do |row| %>
				<tr id=<%= "row-#{row}" %>>
					<% 7.times do |col| %>
						<td id=<%= "col-#{col}" %> class="container-slot col-<%= col %>">
							<div id=<%= "slot-#{row}-#{col}" %> class="slot-empty"></div>
						</td>
					<% end %>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>